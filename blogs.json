<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sahil Rajheti ‚Äî Portfolio</title>

  <!-- SEO -->
  <meta name="description" content="Sahil Rajheti - AI Enthusiast, Web Developer, and Problem Solver. Explore my projects, blogs, and contact me.">
  <meta property="og:title" content="Sahil Rajheti - AI Portfolio">
  <meta property="og:description" content="AI Enthusiast | Web Developer | Problem Solver">
  <meta property="og:url" content="https://sahilrajheti.github.io/">
  <meta name="twitter:card" content="summary_large_image">

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background: #f6f8fb;
      color: #111;
      transition: background 0.3s, color 0.3s;
    }
    body.dark {
      background: #111;
      color: #f6f8fb;
    }
    header {
      text-align: center;
      padding: 40px 20px;
    }
    header h1 {
      font-size: 2.5rem;
    }
    .btn {
      background: #007bff;
      color: #fff;
      padding: 12px 24px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      transition: 0.3s;
    }
    .btn:hover {
      background: #0056b3;
    }
    section {
      max-width: 1000px;
      margin: 60px auto;
      padding: 20px;
    }
    h2 {
      text-align: center;
      margin-bottom: 20px;
    }
    .projects, .blog {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
    }
    .card {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      transition: transform 0.3s;
    }
    .card:hover {
      transform: translateY(-5px);
    }
    body.dark .card {
      background: #1e1e1e;
      color: #f6f8fb;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }
    form input, form textarea {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1rem;
    }
    footer {
      text-align: center;
      padding: 20px;
      margin-top: 40px;
      background: #222;
      color: #fff;
    }
    .toggle-theme {
      position: fixed;
      top: 20px;
      right: 20px;
      background: #444;
      color: #fff;
      padding: 8px 12px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <button class="toggle-theme">üåô</button>

  <header>
    <h1>Hi, I'm <span style="color:#007bff;">Sahil Rajheti</span></h1>
    <p>AI Enthusiast | Web Developer | Problem Solver</p>
    <a href="#projects" class="btn">Explore My Work</a>
  </header>

  <!-- Projects -->
  <section id="projects">
    <h2>üöÄ Projects</h2>
    <div class="projects">
      <div class="card">
        <h3>Portfolio Website</h3>
        <p>A modern portfolio showcasing my skills, projects, and blogs with animations.</p>
      </div>
      <div class="card">
        <h3>AI Chatbot</h3>
        <p>A chatbot powered by AI, integrated into my website for real-time conversations.</p>
      </div>
      <div class="card">
        <h3>Blog System</h3>
        <p>A dynamic blog system loading posts from JSON (or later Firebase).</p>
      </div>
    </div>
  </section>

  <!-- Blog -->
  <section id="blog">
    <h2>üìù Blog</h2>
    <div class="blog" id="blog-container"></div>
  </section>

  <!-- Contact -->
  <section id="contact">
    <h2>üì© Contact Me</h2>
    <form id="contact-form">
      <input type="text" name="name" placeholder="Your Name" required>
      <input type="email" name="email" placeholder="Your Email" required>
      <textarea name="message" rows="5" placeholder="Your Message" required></textarea>
      <button type="submit" class="btn">Send Message</button>
    </form>
  </section>

  <footer>
    <p>¬© 2025 Sahil Rajheti | Built with ‚ù§Ô∏è</p>
  </footer>

  <!-- EmailJS -->
  <script src="https://cdn.emailjs.com/sdk/3.2/email.min.js"></script>
  <script>
    (function(){
      emailjs.init("YOUR_PUBLIC_KEY"); // Replace with your EmailJS Public Key
    })();

    document.getElementById("contact-form").addEventListener("submit", function(e){
      e.preventDefault();
      emailjs.sendForm("YOUR_SERVICE_ID", "YOUR_TEMPLATE_ID", this)
        .then(() => alert("Message sent successfully!"))
        .catch(err => alert("Error: " + JSON.stringify(err)));
    });
  </script>

  <!-- Dark Mode -->
  <script>
    const toggleBtn = document.querySelector(".toggle-theme");
    toggleBtn.addEventListener("click", () => {
      document.body.classList.toggle("dark");
      toggleBtn.textContent = document.body.classList.contains("dark") ? "‚òÄÔ∏è" : "üåô";
    });
  </script>

  <!-- Load Blog from JSON -->
  <script>
    const blogContainer = document.getElementById("blog-container");

    fetch("blogs.json")
      .then(res => res.json())
      .then(data => {
        data.forEach(post => {
          const card = document.createElement("div");
          card.classList.add("card");
          card.innerHTML = `
            <h3>${post.title}</h3>
            <p>${post.excerpt}</p>
            <a href="${post.link}" target="_blank" class="btn">Read More</a>
          `;
          blogContainer.appendChild(card);
        });
      })
      .catch(err => console.error("Error loading blogs:", err));
  </script>

  <!-- Chatbot -->
  <script>
    (function(d, m){
        var kommunicateSettings = {"appId":"YOUR_CHATBOT_APP_ID","popupWidget":true,"automaticChatOpenOnNavigation":true};
        var s = document.createElement("script"); s.type = "text/javascript"; s.async = true;
        s.src = "https://widget.kommunicate.io/v2/kommunicate.app";
        var h = document.getElementsByTagName("head")[0]; h.appendChild(s);
        window.kommunicate = m; m._globals = kommunicateSettings;
    })(document, window.kommunicate || {});
  </script>

</body>
</html>